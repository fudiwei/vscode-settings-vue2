{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": false,
        "jsx": "preserve",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext",
            "ScriptHost"
        ],
        "module": "ESNext",
        "moduleResolution": "Node",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "tslib": [
                "node_modules/tslib/tslib.d.ts"
            ]
        },
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "types": [
            "chai",
            "mocha",
            "webpack-env"
        ],
        "typeRoots": [
            "./node_modules/@types/",
            "./types"
        ],
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
